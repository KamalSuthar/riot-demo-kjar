import java.util.List;
import net.rithms.riot.api.endpoints.match.dto.Match;
import com.myproject.MatchAverages;

rule insertmatchdata 
ruleflow-group 'teamstats'
no-loop
when
    $matches : List()
    $match : Match() from $matches
    $averages : MatchAverages()
    
then
    System.out.println("INSERTING MATCH: " + $match);
    $averages.setTotalMatches($matches.size());
    insert($match);
    //System.out.println("\n\n************** IN THE RULE!!!");
    //System.out.println("SIZE: " + $matches.size());
    //$averages.setAvgBaronKills(3);

end

rule evaluatematch
ruleflow-group 'teamstats'
when
    $match : Match()
    $averages : MatchAverages()
then
    System.out.println("ABOUT TO EVALUATE MATCH : " + $match);
    //$averages.setTotalBaronKills( $averages.getTotalBaronKills() + $match. );
    //$averages.setAvgBaronKills(3);
    System.out.println("TEAM STATS: " + $match.getTeams().get(0));
    System.out.println("TEAM2 STATS: " + $match.getTeams().get(2));
end